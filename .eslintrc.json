{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react-hooks"
    ],
    "extends": [
        "plugin:react/recommended"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/prop-types": "error"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    }
}